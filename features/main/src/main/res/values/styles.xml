<resources>

    <style name="CardButton" parent="@style/DefaultButton">
        <item name="android:backgroundTint">@color/yellow900</item>
        <item name="android:textColor">@color/grey1000</item>
        <item name="shapeAppearanceOverlay">@style/shape_rounded_corners</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="shape_rounded_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="BorderedTextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextViewBorderRectangleRounded" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/bg_bordered_rectangle_rounded</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>
