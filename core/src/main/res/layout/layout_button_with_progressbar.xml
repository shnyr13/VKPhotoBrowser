<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_button_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Small"
        android:indeterminateDrawable="@drawable/loading_spinner"
        android:indeterminateOnly="true"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/margin_small_x"
        app:layout_constraintEnd_toStartOf="@+id/progress_button_text"
        app:layout_constraintTop_toTopOf="@+id/progress_button_text"
        app:layout_constraintBottom_toBottomOf="@id/progress_button_text"
        />

    <TextView
        android:id="@+id/progress_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_small_x"
        android:paddingBottom="@dimen/margin_small_x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@drawable/login_btn_text_color"
        tools:text="center text"/>

</merge>